{
  "version": 2,
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "src/**/*.ts",
          "src/types/session.d.ts",
          "package.json",
          "tsconfig.json"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/server.ts"
    }
  ],
  "env": {
    "SESSION_SECRET": "@session_secret",
    "MONGO_CONNECTION_STRING": "@mongo_connection_string",
    "PORT": "3000"
  }
}
